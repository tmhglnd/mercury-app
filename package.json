{
  "name": "mercury-electron",
  "productName": "Mercury",
  "version": "1.8.0",
  "description": "The Mercury Playground standalone Electron App",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
